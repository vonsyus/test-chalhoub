.main-product {
	padding-top: 40px;
	.product {
    display: flex;

		.product-media {
			max-width: 600px;
			margin-right: 40px;

			.product-gallery-wrapper {
				img {
          width: 100%;
          height: 100%;
				}

				.product-gallery-thumbs .swiper-slide-thumb-active {
					border: 1px solid #000;
				}
			}
		}

		.product-info {
      width: 100%;
			
			.price {
				span {
          text-decoration: line-through;
				}
			}
		}
	}
}